    <% @entries.each do |entry| %>
<div class="diary-container">
  <div class="diary-entries">
    
      <li class="text-center" style="list-style: none;">
        <%= entry.content %> - <%= entry.created_at.strftime("%Y/%m/%d") %>
      </li>

      <!-- request.urlはrailsに備わっている。-->
      <%= link_to "https://twitter.com/share?url=#{ request.url }&text=🌟【注目ポイント】🌟%0a#{ entry.content }%0a%0a📝内容:%0a#{ entry.content }%0a%0a🔗 詳細はこちら: %0a%0a#おすすめ #シェア", target: '_blank' do %>
      <i class="fab fa-twitter" style='color: #3399FF;'></i>シェア
      <% end %>
      </div>
</div> 
    <% end %>
 
